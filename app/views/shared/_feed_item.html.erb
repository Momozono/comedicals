<li id="<%= feed_item.id %>"> <!--partial collectionを使用しているので、@feed_items配列オブジェクトの入ったfeed_item変数が勝手に作成される-->
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
    <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <span class="feed_content"><%= feed_item.content %></span>
    <% if current_user?(feed_item.user) %>
      <%= link_to "delete",feed_item , method: :delete, data: {confirm: "You sure?"}, title: feed_item.content %> <%# またはmicropost_path(feed_item.id) %>
    <% end %>
</li>
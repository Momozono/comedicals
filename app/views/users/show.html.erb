<% provide(:title, @user.name) %>
<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
  </h1>

<p><%= @user.email %></p>
  <% if @user.microposts.count != nil %>
    <div class="microposts">
      <% @microposts.each do |micropost| %>
        <%= render micropost %>
      <% end %>
    </div>
  <% end %>
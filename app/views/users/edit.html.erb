<%= provide(:title, "Edit") %>
<h1>Edit your profile!</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= gravatar_for @user %><a href="http://gravatar.com/emails">Change</a>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Save", class: "btn btn-large btn-default" %>
    <% end %>
  </div>
</div>